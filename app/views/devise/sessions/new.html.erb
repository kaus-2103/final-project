<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header"><h2 class="text-center">Log In</h2></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <div class="form-group">
              <%= f.label t(:email), class: "col-form-label col-md-4 text-md-right" %>
              <div class="col-md-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
  
            <div class="form-group">
              <%= f.label t(:password), class: "col-form-label col-md-4 text-md-right" %>
              <div class="col-md-8">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>
  
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="col-md-8 offset-md-4">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label t(:remember_me), class: "form-check-label" %>
                </div>
              </div>
            <% end %>
  
            <div class="form-group">
              <div class="col-md-8 offset-md-4">
                <%= f.submit t("login"), class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

