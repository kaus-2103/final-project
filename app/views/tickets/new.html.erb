<%= form_with(model: @ticket,url:tickets_create_path(@ticket), local: true) do |form| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, [['Highest', 1], ['High', 2], ['Medium', 3], ['Low', 4], ['Lowest', 5]], {}, {selected: @ticket.priority.to_s} %>
  </div>

  <div class="field">
    <%= form.label :collection %>
    <%= form.text_field :collection %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <%= form.hidden_field :link, value: @link %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
