<h1>Edit Item</h1>

<%= form_with(model: [@collection, @item], local: true) do |form| %>
    <% Rails.logger.debug "Collection: #{@collection.inspect}" %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>
  
   <div class="col-md-6">
    <%= form.label :tags, t(:tags), class: "form-label" %>
    <%= form.text_field :tags, class: "form-control", placeholder: t("enter_tags_separated_by_commas") %>
  </div>
  
  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  
  <div>
  <% @item.custom_field.each do |field_key, field_value| %>
     <div class="field">
      <%= form.label field_key, field_key, class: 'form-label' %>
      <%= form.text_field field_key, name: "item[custom_fields][#{field_key}]",value: field_value, class: "form-control" %>
    </div>
  <% end %>
</div>

  <div class="mb-3">
    <%= form.submit "Save Item", class: "btn btn-primary" %>
  </div>
<% end %>
