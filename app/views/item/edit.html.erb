<h1>Edit Item</h1>

<%= form_with(model: [@collection, @item], local: true) do |form| %>
    <% Rails.logger.debug "Collection: #{@collection.inspect}" %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :tags, class: "form-label" %>
    <%= form.text_field :tags, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  
  <div>
  <% @collection.custom_field_keys.each do |field| %>
    <%= form.label field, field.to_s.humanize %>
    <%= form.text_field field, class: 'form-control', name: "item[custom_fields][#{field}]" %>
  <% end %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save Item", class: "btn btn-primary" %>
  </div>
<% end %>
